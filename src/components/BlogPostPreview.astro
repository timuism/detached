---
export interface Props {
	post: any;
}

const { post } = Astro.props;
---

<article class="max-w-screen-md mx-auto">
	<header class="mb-4">
		<p class="text-sm uppercase tracking-wider">{post.frontmatter.publishDate}</p>
		<a href={post.url} class="text-3xl">
            <h1 class="title">{post.frontmatter.title}</h1>
        </a>
	</header>
</article>