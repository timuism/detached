---
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogPost from '../components/BlogPost.astro';


const { content } = Astro.props;
const { title, description, publishDate, author, heroImage, permalink, alt } = content;
---

<html lang={content.lang || 'en'}>
	<head>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prism-themes@1.9.0/themes/prism-lucario.css"/>
		<BaseHead {title} {description} {permalink} />
	</head>

	<body class="text-white font-dmsans bg-gray-dark">
		<BlogHeader />
    
		<main class="px-4 mt-20">
			<BlogPost {title} {author} {heroImage} {publishDate} {alt}>
				<slot />
			</BlogPost>
		</main>

        <footer class="max-w-screen-md py-12 mx-auto text-white/50">
            <hr class="mx-auto mb-24 border-t-2 border-white/5" />
            <p>Stay Connected with Me!</p>
            <p>Follow me on <a href="https://twitter.com/timuism" target="_new" class="text-white underline">Twitter</a></p>
        </footer>
	</body>
</html>
